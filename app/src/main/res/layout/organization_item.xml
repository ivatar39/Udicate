<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:backgroundTint="#CCCBCB"
            android:layout_width="match_parent"
            android:id="@+id/organization_card"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            android:layout_marginBottom="7dp">

          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
              <ImageView
                  android:id="@+id/iv_organization_logo"
                  android:layout_margin="14dp"
                  android:layout_width="100dp"
                  android:layout_height="100dp"
                  android:src="@drawable/whilte_logo"
                  />
              <LinearLayout
                  android:layout_weight="3"
                  android:layout_marginTop="14dp"
                  android:layout_marginBottom="14dp"
                  android:orientation="vertical"
                  android:layout_width="0dp"
                  android:layout_height="match_parent">
                  <TextView
                      android:id="@+id/tv_organization_name"
                      android:textStyle="bold"
                      android:layout_weight="2"
                      android:ellipsize="marquee"
                      android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:text="Udicate"/>
                  <TextView
                      android:id="@+id/tv_organization_address"
                      android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1"
                      android:text="address"/>

              </LinearLayout>
              <ScrollView
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="match_parent">
              <LinearLayout
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv1_organization_type"
                        android:layout_margin="3dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@color/colorPrimary"/>
                  <ImageView
                      android:id="@+id/iv2_organization_type"
                      android:layout_margin="3dp"
                      android:layout_width="40dp"
                      android:layout_height="40dp"
                      android:src="@color/colorPrimary"/>
                  <ImageView
                      android:id="@+id/iv3_organization_type"
                      android:layout_margin="3dp"
                      android:layout_width="40dp"
                      android:layout_height="40dp"
                      android:src="@color/colorPrimary"/>
              </LinearLayout>
              </ScrollView>
          </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>